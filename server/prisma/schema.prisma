generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Recipe {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  title       String
  description String
}

model User {
  id    String  @id @default(uuid())
  name  String?
  email String  @unique
}

model Ingredient {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
}
